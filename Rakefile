# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/acts_as_exclusive.rb'

Hoe.new('acts_as_exclusive', '0.0.1') do |p|
  p.rubyforge_name = 'acts_as_exclusive'
  p.author = 'Alex Egg'
  p.email = 'eggie5@gmail.com'
  p.summary = 'rails plugin that marks a model as exclusive to a certain owner'
  p.description = p.paragraphs_of('README.txt', 2..5).join("\n\n")
  p.url = p.paragraphs_of('README.txt', 0).first.split(/\n/)[1..-1]
  p.changes = p.paragraphs_of('History.txt', 0..1).join("\n\n")
end

